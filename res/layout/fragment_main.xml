<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/letterCountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Letters:"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/letterCountSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/firstLetterEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/secondLetterEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/thirdLetterEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/fourthLetterEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/fifthLetterEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/sixthLetterEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/seventhLetterEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/eighthLetterEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters" />
    </LinearLayout>

    <TextView
        android:id="@+id/lettersNotIncludedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specify each letter known to not be included"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/lettersNotIncludedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sortMethodLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sort by:"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/sortMethodSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/wordsResultsListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4" />

        <ListView
            android:id="@+id/lettersResultsListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>